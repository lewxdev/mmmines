{
  "name": "mmmines",
  "private": true,
  "scripts": {
    "dev": "esrun --watch app/server.ts",
    "start": "NODE_ENV=production esrun app/server.ts",
    "build": "next build",
    "lint": "next lint",
    "format": "prettier --cache --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.2.4",
    "clsx": "^2.1.1",
    "esrun": "^3.2.26",
    "geist": "^1.3.1",
    "ioredis": "^5.4.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.414.0",
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@flydotio/dockerfile": "^0.5.8",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@tsconfig/next": "^2.0.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/lodash": "^4.17.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ]
  },
  "prettier": {
    "importOrder": [
      "<BUILTIN_MODULES>",
      "^react$",
      "^next$",
      "<THIRD_PARTY_MODULES>",
      "^@/.*$",
      "^[.]"
    ],
    "importOrderTypeScriptVersion": "5.0.0",
    "plugins": [
      "prettier-plugin-tailwindcss",
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "tailwindFunctions": [
      "tw"
    ]
  }
}
